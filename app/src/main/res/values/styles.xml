<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rootLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/rootBackground</item>
    </style>

    <style name="playlistText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/rootMargin</item>
        <item name="android:textSize">@dimen/playlistFont</item>
        <item name="android:textColor">@color/defaultBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="rootList" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_marginLeft">@dimen/rootMargin</item>
        <item name="android:layout_marginRight">@dimen/rootMargin</item>
        <item name="android:layout_marginBottom">@dimen/rootMargin</item>
    </style>

    <style name="textList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/elementMargin</item>
        <item name="android:textColor">@color/defaultBlack</item>
    </style>

    <style name="imageItemList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">@dimen/maxImageItemHeight</item>
        <item name="android:maxWidth">@dimen/maxImageItemWidth</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginTop">@dimen/elementMargin</item>
        <item name="android:layout_marginBottom">@dimen/elementMargin</item>
    </style>

    <style name="eachTextList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/elementMargin</item>
        <item name="android:textColor">@color/defaultBlack</item>
    </style>

    <style name="eachSongImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">@dimen/maxEachImageHeight</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">@dimen/rootMargin</item>
    </style>

    <style name="playButtons">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/playButtonsHeight</item>
        <item name="android:background">@color/imageButton</item>
        <item name="android:layout_marginStart">@dimen/elementMargin</item>
        <item name="android:layout_marginEnd">@dimen/elementMargin</item>
    </style>

</resources>
